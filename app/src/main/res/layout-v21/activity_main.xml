<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/content"
    android:background="#222225"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:background="#FFFAFA"
        android:elevation="5dp"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_goneMarginTop="10sp">

        <TextView

            android:id="@+id/sub_value"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:ellipsize="start"

            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:hint="@string/_0"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textColorHint="#B1ADAD"
            android:textSize="45sp"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="300dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="end"
            android:hint="@string/_0"

            android:lines="1"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#B1ADAD"
            android:textSize="30sp" />


    </LinearLayout>
    <!-- 478dp -->

    <GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:foregroundGravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"

        >


        <Button

            android:id="@+id/button_1"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:width="100dp"
            android:height="75dp"

            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_1"



            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button

            android:id="@+id/button_2"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"

            android:width="100dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_2"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button
            android:id="@+id/button_3"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:width="100dp"
            android:height="75dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_3"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button
            android:id="@+id/button_deleted"
            style="@style/PadButtonStyle.Advanced"
            android:elevation="10dp"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill_vertical|fill_horizontal"

            android:drawableStart="@drawable/ic_outline_backspace_24"
            android:drawablePadding="@dimen/cardview_default_radius"
            android:gravity="center"
            android:paddingStart="38dp"

            android:textSize="13sp"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button

            android:id="@+id/button_4"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:width="100dp"
            android:height="75dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_4"

            />

        <Button
            android:id="@+id/button_5"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:gravity="center"
            android:padding="12sp"
            android:tag="@string/num_5"
            android:text="@string/num_5"
            />


        <Button
            android:id="@+id/button_6"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:width="100dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_6"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/button_7"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:height="75dp"
            android:padding="12sp"
            android:text="@string/num_7"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button
            android:id="@+id/button_8"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:padding="12sp"
            android:text="@string/num_8"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button
            android:id="@+id/button_9"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill"

            android:width="100dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/num_9"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/dot"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="fill_vertical"
            android:width="100dp"
            android:height="75dp"
            android:text="@string/module"
            android:paddingBottom="20dp"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/button_0"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:height="75dp"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/_0"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/module"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:width="100dp"
            android:height="75dp"
            android:gravity="center"
            android:padding="12sp"
            android:layout_gravity="fill_vertical"
            android:text="@string/modul"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/button_reset"
            android:elevation="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_row="1"
            android:textColor="@color/black"

            style="@style/PadButtonStyle.Advanced"
            android:layout_rowSpan="3"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"
            android:text="@string/c"
            android:textAlignment="center"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:width="100dp"
            android:height="75dp"
            android:id="@+id/sum"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/sum"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:width="100dp"
            android:height="75dp"
            android:layout_column="0"
            android:layout_row="5"
            android:id="@+id/subtraction"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="fill_vertical|center"
            android:padding="12sp"
            android:text="@string/subtraction"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />


        <Button
            android:id="@+id/button_square"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_vertical"

            android:width="100dp"
            android:gravity="center"
            android:text="@string/square"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/root_square"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:width="100dp"

            android:layout_gravity="fill_vertical"

            android:text="@string/root_square"


            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:width="100dp"
            android:height="75dp"
            android:layout_column="2"
            android:layout_row="4"
            android:id="@+id/_multiply"
            style="@style/PadButtonStyle"
            android:layout_height="wrap_content"
            android:tag="*"
            android:gravity="center"
            android:padding="12sp"
            android:text="@string/multiply"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:id="@+id/division"
            style="@style/PadButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_gravity="fill_vertical"
            android:width="100dp"

            android:padding="12sp"
            android:tag="/"
            android:text="@string/division"

            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="545dp" />

        <Button
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_row="4"
            android:id="@+id/button_equal"
            android:elevation="20dp"
            style="@style/PadButtonStyle.Advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:gravity="center"
            android:text="@string/equal"
            android:textColor="@color/black"
            />


    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>